
@{
    ViewBag.Title = "Statistics";
    List<Tuple<string, int>> spedizioniPerCittaList = ViewBag.SpedizioniPerCittaList;
    int numeroSped = ViewBag.consegneNonEffettuate;
    List<SpedizioniSPA.Models.Spedizione> SpedizioniInConsegna = ViewBag.SpedizioniInConsegna;

}

<div class="container text-white">

    <div class="row">
        <div class="col p-5">
            <h2 class="display-6">In attesa di consegna</h2>
            <h1 class="display-1">@numeroSped</h1>
        </div>
        <div class="col p-5">
            <h2 class="display-6">Statistiche Spedizioni</h2>

            <div class="row ">
                <div class="col">
                    <div class="row p-3">
                        <div class="col">
                            Città
                        </div>
                        <div class="col">
                            Numero di Spedizioni
                        </div>
                    </div>
                    @foreach (var item in spedizioniPerCittaList)
                    { 
                    <div class="row fw-bold p-3 text-white glass mb-3 cursor swing-in-top-fwd ">
                        <div class="col">
                            @item.Item1
                        </div>
                        <div class="col">
                            @item.Item2
                        </div>
                    </div>      
                    }
                    </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col p-5">
            <h2>Spedizioni in consegna oggi</h2>
            <div class="row">
                <div class="col">
                    <div class="row mt-2 mb-3  fw-bold text-white p-3 position-sticky">
                        <div class="col ">Id Spedizione</div>
                        <div class="col">Data Spedizione</div>
                        <div class="col">Peso</div>
                        <div class="col">Costo</div>
                        <div class="col">Data Consegna</div>
                        <div class="col">Destinazione</div>
                        <div class="col">Controlli</div>
                    </div>

                    @foreach (var item in SpedizioniInConsegna)
        {

            <div class="cardHover">
                <div class="row fw-bold p-3 text-white glass mb-3 cursor swing-in-top-fwd">
                    <div class="col ">@item.IdSpedizione</div>
                    <div class="col">@item.DataSpedizione.ToShortDateString()</div>
                    <div class="col">@item.Peso kg</div>
                    <div class="col">@item.Costo €</div>
                    <div class="col">@item.DataConsegna.ToShortDateString()</div>
                    <div class="col">@item.CittaDestinazione</div>
                    <div class="col">@Html.ActionLink("Aggiorna Stato", "EditAggiornamento", "Aggiornamento", new { idSpedizione = item.IdSpedizione }, new { @class = "btn btn-warning" })</div>
                </div>
            </div>

        }



                </div>
            </div>
        </div>

    </div>
</div>

